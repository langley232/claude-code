{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "env": {}
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_DIR": "./.claude/mcp-memory",
        "MAX_MEMORY_SIZE": "10485760"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "n8n-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "n8n-mcp"
      ],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "http://localhost:5678/api/v1",
        "N8N_API_KEY": "${N8N_API_KEY}"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {}
    },
    "shadcn-ui": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@jpisnice/shadcn-ui-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "Ref": {
      "type": "http",
      "url": "https://api.ref.tools/mcp?apiKey=${REF_API_KEY}"
    },
    "mcp-youtube": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@anaisbetts/mcp-youtube"
      ],
      "env": {}
    },
    "supabase": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=grsyqstzcyoocsvnmwjz"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}"
      }
    },
    "stripe": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@stripe/mcp-server@latest"
      ],
      "env": {
        "STRIPE_API_KEY": "${STRIPE_API_KEY}"
      }
    },
    "ElevenLabs": {
      "type": "stdio",
      "command": "uvx",
      "args": ["elevenlabs-mcp"],
      "env": {
        "ELEVENLABS_API_KEY": "${ELEVENLABS_API_KEY}"
      }
    },
    "firecrawl-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
     "code-index": {
      "type": "stdio",
      "command": "uvx",
      "args": ["code-index-mcp"]
    },
    "plaid": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-plaid",
        "--client-id", "${PLAID_CLIENT_ID}",
        "--secret", "${PLAID_SECRET}"
      ],
      "env": {}
    },
    "vercel": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "vercel-mcp"
      ],
      "env": {
        "VERCEL_API_KEY": "${VERCEL_API_KEY}",
        "VERCEL_TEAM_ID": "${VERCEL_TEAM_ID}"
      }
    },
    "skysql": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@skysqlinc/skysql-mcp"
      ],
      "env": {
        "SKYSQL_API_KEY": "${SKYSQL_API_KEY}"
      }
    }
  }
}
