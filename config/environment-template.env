# Claude Code MCP Configuration Template
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# n8n Configuration (if using n8n workflows)
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your_n8n_api_key_here

# Ref API Key (if using Ref documentation service)
REF_API_KEY=your_ref_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Clerk Configuration
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Project Configuration
PROJECT_ROOT=/path/to/your/project
WORKING_DIR=/path/to/your/project

# Memory Configuration
MEMORY_DIR=./.claude/mcp-memory
MAX_MEMORY_SIZE=10485760

# Vercel Configuration
VERCEL_API_KEY=your_vercel_api_token_here
VERCEL_TEAM_ID=your_vercel_team_id_here

# SkySQL Configuration
SKYSQL_API_KEY=your_skysql_api_key_here

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox