{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": false,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.js",
    "css": "src/styles/globals.css",
    "baseColor": "slate",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "./src/components",
    "utils": "./src/lib/utils",
    "ui": "./src/components/ui",
    "lib": "./src/lib",
    "hooks": "./src/hooks"
  },
  "iconLibrary": "lucide",
  "mobile": {
    "platform": "ios",
    "touchTargetSize": "44px",
    "gestureSupport": true,
    "hapticFeedback": true,
    "voiceIntegration": true,
    "glassDesign": true
  },
  "registries": {
    "@react-native": "https://react-native-ui.com/registry/{name}.json",
    "@nativewind": "https://nativewind.dev/registry/{name}.json",
    "@expo": "https://expo.dev/registry/{name}.json"
  }
}
